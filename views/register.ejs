<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Register</title>
    <link
      href="https://pagecdn.io/lib/skeleton/2.0.4/skeleton.min.css"
      rel="stylesheet"
      crossorigin="anonymous"
    />
  </head>
  <body>
    <h1>Register</h1>
    <div>
      <ul>
        <% if(typeof errors !='undefined'){%> <% errors.forEach(error=>{%>
        <li><%= error.message %></li>
        <% }) %> <% }%>
      </ul>
    </div>
    <form action="/users/register" method="post">
      <div>
        <label for="username">Username</label>
        <input
          type="text"
          id="username"
          name="username"
          placeholder="youSir"
          required
        />
      </div>
      <div>
        <label for="email">Email</label>
        <input
          type="email"
          name="email"
          id="email"
          placeholder="hello@example.com"
          required
        />
      </div>
      <div>
        <label for="password">Password</label>
        <input
          type="password"
          name="password"
          id="password"
          placeholder="top_secret"
          required
        />
      </div>
      <div>
        <label for="password2">Confirm password</label>
        <input
          type="password"
          name="password2"
          id="password2"
          placeholder="top_secret"
          required
        />
      </div>
      <div><button type="submit">submit</button></div>
    </form>
    <div>
      <a href="/users/login">Already have an account? click here</a>
    </div>
  </body>
</html>
